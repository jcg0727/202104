<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Notice-Mapper">

	<sql id="search">	
		<if test="searchType == 'w'.toString()">
			and writer like '%'||#{keyword}||'%'			
		</if>
		<if test="searchType == 't'.toString()">
			and title like '%'||#{keyword}||'%'			
		</if>	
	</sql>	
	
	<select id="selectSearchNoticeList" resultType="notice">
		select
		*
		from notice
		order by 1 desc
	</select>
	
	<select id="selectSearchNoticeListCount" resultType="int">
		select
		count(*) 
		from notice
		where nno is not null
		<include refid="search" />
	</select>
	
	<update id="insertNotice" parameterType="notice">
		insert into
		notice(nno,title,writer,content,startdate)
		values(NOTICE_SEQ.nextVal,#{title},#{writer},#{content},sysdate)
	</update>
	
	<delete id="deleteNotice" parameterType="int">
		delete
		from notice
		where nno=#{nno	}
	</delete>
	
	<select id="selectNoticeByNno" parameterType="int" resultType="notice">
		select
		*
		from notice
		where nno=#{nno}
	</select>
	
	<update id="updateNotice" parameterType="notice">
		update notice
		set
		title=#{title}, content=#{content}
		where nno=#{nno}
	</update>
</mapper>